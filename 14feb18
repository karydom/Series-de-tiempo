attach(mtcars)
par(mfrow=c(3,1)) #representa graficos en un solo lienzo
hist(wt)   #tendencia
hist(mpg) #Estacionalidad
hist(disp)  #Aleatoriedad

attach(mtcars)
layout(matrix(c(1,1,2,3),2,2,byrow = TRUE)) #representa graficos en un solo lienzo
hist(wt)   #tendencia
hist(mpg) #Estacionalidad
hist(disp)  #Aleatoriedad

detach(mtcars)


