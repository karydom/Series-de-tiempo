xv<- seq(-3,3,0.01) #secuencia 
yv<- dnorm(xv) #distribucion normal
plot(xv, yv, type = "l",col="blue",main = "DistribuciÃ³n normal",ylab = "Kilo de oro", xlab = "Periodo")

